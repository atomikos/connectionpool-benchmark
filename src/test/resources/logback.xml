<configuration debug="true">

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="Atomikos-FILE" class="ch.qos.logback.core.FileAppender">
		<file>Atomikos.log</file>
		<encoder>
			<pattern>%msg;</pattern>
		</encoder>
	</appender>
	<logger name="Atomikos" level="INFO">
		<appender-ref ref="Atomikos-FILE" />
	</logger>

	<appender name="Hikari" class="ch.qos.logback.core.FileAppender">
		<file>Hikari.log</file>
		<encoder>
			<pattern>%msg;</pattern>
		</encoder>
	</appender>
	<logger name="Hikari" level="INFO">
		<appender-ref ref="Hikari" />
	</logger>

	<appender name="Dbcp" class="ch.qos.logback.core.FileAppender">
		<file>Dbcp.log</file>
		<encoder>
			<pattern>%msg;</pattern>
		</encoder>
	</appender>
	<logger name="Dbcp" level="INFO">
		<appender-ref ref="Dbcp" />
	</logger>


	<root level="ERROR">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>